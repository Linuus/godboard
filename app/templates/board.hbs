<div class="row">
  <div class="col-md-3">
    {{#each}}
      <div class="card">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">{{title}}</h3>
          </div>
          <div class="panel-body">
            {{body}}
          </div>
          <div class="panel-footer">
            <span class="label label-info">{{state}}</span>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
